{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2022",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "allowJs": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
